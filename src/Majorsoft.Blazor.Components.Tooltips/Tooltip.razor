<div class="btooltip">
    <span>@Text</span>
    @ChildContent
</div>

@code {
    /// <summary>
    /// 
    /// </summary>
    [Parameter] public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// 
    /// </summary>
    [Parameter] public string Text { get; set; } = "";

    /// <summary>
    /// 
    /// </summary>
    [Parameter] public TooltipsPositons Positon { get; set; } = TooltipsPositons.Top;
}