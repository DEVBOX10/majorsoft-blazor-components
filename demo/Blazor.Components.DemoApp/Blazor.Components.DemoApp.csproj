<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<nullable>enable</nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Majorsoft.Blazor.Components.CssEvents" Version="0.9.45-rc.1.20452.10" />
		<PackageReference Include="Majorsoft.Blazor.Components.Debounce.Input" Version="0.9.30-rc.1.20452.10" />
		<PackageReference Include="Majorsoft.Blazor.Components.Dialog" Version="0.9.45-rc.1.20452.10" />
		<PackageReference Include="Majorsoft.Blazor.Components.Loading" Version="0.9.30-rc.1.20452.10" />
		<PackageReference Include="Majorsoft.Blazor.Components.Timer" Version="0.9.30-rc.1.20452.10" />
		<PackageReference Include="Majorsoft.Blazor.WebAssembly.Logging.Console" Version="0.9.30-rc.1.20452.10" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.0-rc.2.20475.17" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.0-rc.2.20475.17" PrivateAssets="all" />
		<PackageReference Include="System.Net.Http.Json" Version="5.0.0-rc.2.20475.5" />
	</ItemGroup>

	<ItemGroup>
		<!-- extends watching group to include *.razor files -->
		<Watch Include="**\*.razor" />
	</ItemGroup>

	<ItemGroup>
	  <Watch Remove="Components\ColorComponent.razor" />
	  <Watch Remove="Components\Debounce.razor" />
	  <Watch Remove="Components\Extensions.razor" />
	  <Watch Remove="Components\Index.razor" />
	  <Watch Remove="Components\Loading.razor" />
	  <Watch Remove="Components\ModalComponent.razor" />
	  <Watch Remove="Components\TimerComponent.razor" />
	  <Watch Remove="NavMenu.razor" />
	  <Watch Remove="Pages\ColorPage.razor" />
	  <Watch Remove="Pages\DebounceInputPage.razor" />
	  <Watch Remove="Pages\ExtensionsPage.razor" />
	  <Watch Remove="Pages\IndexPage.razor" />
	  <Watch Remove="Pages\LoadingPage.razor" />
	  <Watch Remove="Pages\ModalPage.razor" />
	  <Watch Remove="Pages\TimerPage.razor" />
	</ItemGroup>

</Project>
